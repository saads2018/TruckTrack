@page
@using Microsoft.AspNetCore.Components.Authorization
@using TruckTrack.Data
@using TruckTrack.Models
    
@model CustomerModel
@{
    ViewData["Title"] = "Add New Customer";
}

@inject SignInManager<AdvancedUser> _signInManager;
@inject ApplicationDbContext dbContext;
@inject AuthenticationStateProvider authenticate;


@if (_signInManager.IsSignedIn(User) && dbContext.Users.Where(x => x.UserName == User.Identity.Name).FirstOrDefault().Admin == true)
{
    <div class="row justify-content-md-center">
        <div class="col-md-10">
            <form style="margin-top:10%" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1 style="text-align:center">@ViewData["Title"]</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Name" class="form-control" />
                    <label asp-for="Input.Name" class="form-label"></label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Route" class="form-control" />
                    <label asp-for="Input.Route" class="form-label"></label>
                    <span asp-validation-for="Input.Route" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Address" class="form-control" />
                    <label asp-for="Input.Address" class="form-label"></label>
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ZipCode" class="form-control" />
                    <label asp-for="Input.ZipCode" class="form-label"></label>
                    <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Add Customer</button>
            </form>
        </div>
    </div>
}
else
{
    <p>You must be logged in as an admin to view this page.</p>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

